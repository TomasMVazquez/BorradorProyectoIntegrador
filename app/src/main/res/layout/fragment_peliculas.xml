<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Fragments.PeliculasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDarkTrans"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvCategoriaPrimero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favoritos"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextOnS"
                    android:textStyle="bold|italic"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylcerViewPrimero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvCategoriaSegundo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="AcciÃ³n"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextOnS"
                    android:textStyle="bold|italic"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylcerViewSegundo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvCategoriaTercero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Drama"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextOnS"
                    android:textStyle="bold|italic"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylcerViewTercero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tvCategoriaCuarto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sci-Fi"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextOnS"
                    android:textStyle="bold|italic"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylcerViewCuarto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvCategoriaQuinto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Comedia"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextOnS"
                    android:textStyle="bold|italic"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylcerViewQuinto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabFiltroPeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:src="@drawable/ic_filter_list_black_36dp"
        android:elevation="6dp"
        app:fabSize="normal"
        />
</android.support.design.widget.CoordinatorLayout>